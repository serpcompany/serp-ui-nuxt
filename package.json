{
  "name": "nuxt-app",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "husky:prepare": "husky install",
    "postinstall": "husky install && nuxt prepare",
    "lint": "eslint . --quiet && prettier . --check",
    "preview": "nuxt preview"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "!_shadcn-vue/**/*": []
  },
  "dependencies": {
    "@nuxt/eslint": "^0.5.7",
    "class-variance-authority": "^0.7.0",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.447.0",
    "nuxt": "^3.13.0",
    "radix-vue": "^1.9.6",
    "shadcn-nuxt": "^0.10.4",
    "tailwind-merge": "^2.5.3",
    "tailwindcss-animate": "^1.0.7",
    "vue": "latest",
    "vue-router": "latest"
  },
  "devDependencies": {
    "@nuxtjs/tailwindcss": "^6.12.1",
    "@typescript-eslint/eslint-plugin": "^8.8.0",
    "@typescript-eslint/parser": "^8.8.0",
    "eslint": "^9.12.0",
    "eslint-plugin-vue": "^9.28.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "prettier": "^3.3.3",
    "prettier-plugin-packagejson": "^2.5.2",
    "prettier-plugin-tailwindcss": "^0.6.6",
    "typescript": "^5.6.2"
  }
}